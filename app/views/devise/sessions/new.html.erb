<div class="form-user">
  <h2 class="form-user-heading">Please sign in</h2> <br />

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= f.label :email, :for => "inputEmail", :class => "sr-only"%>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control", :id => "inputEmail", :placeholder => "Email address" %>
      <%= f.label :password, :for => "inputPassword", :class => "sr-only"%>
      <%= f.password_field :password, autocomplete: "off", :class => "form-control", :id => "inputPassword", :placeholder => "Password"%>
    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>
    <div class="actions">
      <%= f.submit "Log in", :class => "btn btn-lg btn-primary btn-block" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
