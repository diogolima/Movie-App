<div class="form-user">
  <h2>Forgot password?</h2>
  
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= devise_error_messages! %>
      <%= f.label :email, :class => "sr-only" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control", :id => "inputEmail", :placeholder => "Email address"  %>
    <br />
    <div class="actions">
      <%= f.submit "Send me reset password", :class => "btn btn-lg btn-primary btn-block" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
