<div class="form-user">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %> <br />
      <%= f.label :email, :for => "inputEmail", :class => "sr-only" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control", :id => "inputEmail", :placeholder => "Email address"  %>
      <%= f.label :password, :for => "inputPassword", :class => "sr-only" %>
      <%= f.password_field :password, autocomplete: "off", :class => "form-control password-sign-up", :placeholder => "Password" %>
      <%= f.label :password_confirmation, :for => "inputPassword", :class => "sr-only"  %>
      <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control password-sign-up", :placeholder => "Password confirmation" %><br />
    <div class="actions">
      <%= f.submit "Sign up", :class => "btn btn-lg btn-primary btn-block"  %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
