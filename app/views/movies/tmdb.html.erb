<div class="jumbotron">
<h1>TMDB Movie Database</h1>
<p>The Movie Database (TMDb) is a community built movie and TV database.</p>
<%= render 'movies/tmdbform' %>
</div>
<div class="row">
  <div class="table-responsive">
    <table class="table">
      <tbody>
        <% @tmdb_movies.each do |movie| %>
          <tr class="movie-margin">
            <td><%= image_tag(movie[:image]) %></td>
            <td><strong>Title:</strong></td>
            <td><%= movie[:title] %></td>
            <td><strong>Description</strong></td>
            <td><%= movie[:description] %></td>
            <td><strong>Original Language</strong></td>
            <td><%= movie[:original_language] %></td>
            <td><strong>Release Date</strong></td>
            <td><%= movie[:release_date] %></td>
            <td><strong>Rating</strong></td>
            <td><%= movie[:vote_average] %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
